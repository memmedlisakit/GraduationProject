@using ISM_Final_Lahiye.Areas.Adminpanel.Models;

@model RoleAndPermissionVM
 
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Adminpanel/Views/Shared/_Layout.cshtml";
}
 <a href="@Url.Action("Insert", "RoleAndPermission")" class="btn btn-success"><i class="icon icon-plus"></i> Add new Permisson to Role</a>
<br />
<br />

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Role and Permissions
    </div>
    <div class="card-body" id="roleAndPermission">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>Role</th>
                        <th>Permission</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody> 
                    @for (int i = 0; i < Model.permission_id_and_role_id.Count; i++)
                    {
                        <tr class="text-center test_class">
                            <td>@Model.roles[i].role_name</td>
                            <td>@Model.permissions[i].per_link</td>
                            <td>
                                <a href="#" class="btn btn-danger btn-sm float-right activeAccount delete_role_and_permission" data-toggle="modal" data-target="#delete_modal" data-id="@Model.permission_id_and_role_id[i].p_id">
                                    <i class="icon icon-trash"></i>   Delete
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("Update", "RoleAndPermission", new { id = Model.permission_id_and_role_id[i].p_role_id })" class="btn btn-info btn-sm float-right ">
                                    <i class="icon icon-pencil"></i>   Update
                                </a>
                            </td>
                        </tr>
                    }     
                </tbody>
            </table>
        </div>
    </div>
</div>

@* Delete modal*@
<div class="modal fade" id="delete_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger border-0">
                <h5 class="modal-title text-white"> Do you want delete this item ? </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-5">

            </div>
            <div class="modal-footer border-0">
                <button id="delete_cancel" type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
                <a href="#" id="delete_link_a" class="btn btn-danger">
                    Delete
                </a>
            </div>
        </div>
    </div>
</div>

