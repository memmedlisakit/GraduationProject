@using ISM_Final_Lahiye.Areas.Adminpanel.Models

@model RoleAndPermissionVM

@{
    ViewBag.Title = "Insert";
    Layout = "~/Areas/Adminpanel/Views/Shared/_Layout.cshtml";
}

<a href="@Url.Action("Index", "RoleAndPermission")" class="btn btn-warning"><i class="icon icon-action-undo"></i> Back</a>
<br />
<br />


<form action="@Url.Action("Insert", "RoleAndPermission")" method="post">
    <div class="card">
        <div class="card-header bg-light">
            Roles
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="single-select">Select a Role :</label>
                        <select id="single-select" class="form-control" name="p_role_id">
                            @foreach (var item in Model.roles)
                            {
                                <option value="@item.role_id">@item.role_name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-4 offset-md-4">
                    <div class="form-group">
                        <div>
                            <label for="single-select"></label>
                        </div>
                        <input type="submit" class="btn btn-primary float-right" value="Add" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-light">
                    Permissions
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.permissions.Count; i++)
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <div class="toggle-switch float-right" data-ts-color="primary">
                                    <label for="@Model.permissions[i].per_id" class="ts-label">@Model.permissions[i].per_link</label>
                                    <input id="@Model.permissions[i].per_id" type="checkbox" hidden="hidden" name="p_permission_id" value="@Model.permissions[i].per_id">
                                    <label for="@Model.permissions[i].per_id" class="ts-helper"></label>
                                </div>
                            </div>
                        </div>
                        <hr>
                    }
                </div>
            </div>
        </div>
    </div>
</form>

