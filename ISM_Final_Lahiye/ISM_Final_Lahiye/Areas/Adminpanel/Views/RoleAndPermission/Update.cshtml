@using ISM_Final_Lahiye.Areas.Adminpanel.Models

@model RoleAndPermissionVM

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Adminpanel/Views/Shared/_Layout.cshtml";
}
<a href="@Url.Action("Index", "RoleAndPermission")" class="btn btn-warning"><i class="icon icon-action-undo"></i> Back</a>
<br />
<br />

 
<form action="@Url.Action("Update", "RoleAndPermission", new { id = Model.role.role_id})" method="post">
    <div class="card">
        <div class="card-header bg-light">
            Roles
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="single-select">Role :</label> 
                            <input class="form-control" disabled name="role_id" value="@Model.role.role_name"/> 
                    </div>
                </div>
                <div class="col-md-4 offset-md-4">
                    <div class="form-group">
                        <div>
                            <label for="single-select"></label>
                        </div>
                        <input type="submit" class="btn btn-primary float-right" value="Save" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-light">
                    Permissions
                </div>
                <div class="card-body">  
                        @{
                            string input_checked = ""; 
                         }  
                            @for (int i = 0; i < Model.permissions.Count; i++)
                            {
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="toggle-switch float-right" data-ts-color="primary">
                                            <label for="@Model.permissions[i].per_id" class="ts-label">@Model.permissions[i].per_link</label>
                                            @foreach (var item in Model.permission_id_and_role_id)
                                            {
                                                if (item.p_permission_id == Model.permissions[i].per_id)
                                                {
                                                    input_checked = "checked";
                                                }
                                            }
                                            <input id="@Model.permissions[i].per_id" type="checkbox" hidden="hidden" @input_checked name="p_permission_id" value="@Model.permissions[i].per_id">
                                            <label for="@Model.permissions[i].per_id" class="ts-helper"></label>
                                            @{ input_checked = "";}
                                        </div>
                                    </div> 
                                </div>
                                <hr>
                            } 
                </div>
            </div>
        </div>
    </div>
</form>


